if [ ${model} == 'HadCM3' ] ; then
dirin=(LEEDS/HadCM3/e280/NearSurfaceTemperature LEEDS/HadCM3/e280/SST LEEDS/HadCM3/eoi400/NearSurfaceTemperature LEEDS/HadCM3/eoi400/SST)
