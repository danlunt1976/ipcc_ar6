fi

if [ ${model} == 'MRI-CGCM2.3' ] ; then
dirin=(MRI-CGCM2.3/tas MRI-CGCM2.3/tos MRI-CGCM2.3/tas MRI-CGCM2.3/tos)
filein=(\
e280.tas.0[5-9]?.nc \
e280.tos.0[5-9]?.nc \
eoi400.tas.0[5-9]?.nc \
eoi400.tos.0[5-9]?.nc \
)
old_name=(tas tos tas tos)
do_lev=(0 0 0 0)
do_mon=(0 0 0 0)
