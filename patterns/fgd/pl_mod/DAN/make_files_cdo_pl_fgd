fi

if [ ${model} == 'NorESM1-F' ] ; then
dirin=(NorESM1-F NorESM1-F NorESM1-F NorESM1-F)
filein=(\
NorESM1-F_E280_TREFHT.nc \
NorESM1-F_E280_sst.nc \
NorESM1-F_Eoi400_TREFHT.nc \
